<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="0dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_shadow_start_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/afichePelicula"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/deprdador"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="137dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="4"
                    android:text="Titulo :"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_weight="4"
                    android:text="AÃ±o :"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_weight="4"
                    android:text="Genero :"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_weight="4"
                    android:text="Direccion :"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_weight="4"
                    android:text="Reparto :"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Predator"
                    android:textSize="12dp"
                    android:layout_weight="6"
                    android:layout_gravity="start"
                    android:layout_marginTop="2dp"/>


                <TextView
                    android:id="@+id/tvAnio"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="1987"
                    android:textSize="12dp"
                    android:layout_weight="5"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tvGenero"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Accion/Terror/Aventura"
                    android:textSize="12dp"
                    android:layout_weight="5"
                    android:layout_gravity="start"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tvDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Jhon Mctiernan"
                    android:textSize="12dp"
                    android:layout_weight="5"
                    android:layout_gravity="start"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tvReparto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Arnold Schwarzenegger-Carl Weathers-Kevin Peter Hall"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            

        </LinearLayout>





    </androidx.cardview.widget.CardView>

    

</LinearLayout>